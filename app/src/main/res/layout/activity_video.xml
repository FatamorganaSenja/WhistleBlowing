<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VideoActivity"
    android:background="#e3fbff">

    <bg.devlabs.fullscreenvideoview.FullscreenVideoView

        android:id="@+id/fullscreenVideoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:tint="@color/colorPrimaryDark"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_whistle"
        android:textColor="@color/colorPrimary"/>
    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_ulangi"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:tint="@color/colorPrimaryDark"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_replay_black_24dp"/>
            <TextView
                android:text="Ulangi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sb_layout"
        android:text="Berikan Pendapat Anda :"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
    <com.warkiz.widget.IndicatorStayLayout
        android:id="@+id/sb_layout"
        android:layout_above="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp">
        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/sb_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isb_max="100"
            app:isb_min="0"
            app:isb_progress="25"
            app:isb_seek_smoothly="true"
            app:isb_ticks_count="5"
            app:isb_show_tick_marks_type="oval"
            app:isb_tick_marks_size="13dp"
            app:isb_show_tick_texts="true"
            app:isb_tick_texts_size="15sp"
            app:isb_tick_texts_color="@color/colorAccent"
            app:isb_thumb_color="@color/colorPrimaryDark"
            app:isb_thumb_size="20dp"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_indicator_color="@color/colorPrimaryDark"
            app:isb_indicator_text_color="@color/colorAccentOri"
            app:isb_tick_marks_color="@color/colorAccentOri"
            app:isb_indicator_text_size="18sp"
            app:isb_track_background_color="#d6d6d6"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_color="@color/colorPrimary"
            app:isb_track_progress_size="4dp" />
    </com.warkiz.widget.IndicatorStayLayout>
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kirim"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorAccentOri"/>
</RelativeLayout>