<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VideoActivity"
    android:background="#e3fbff">

    <bg.devlabs.fullscreenvideoview.FullscreenVideoView

        android:id="@+id/fullscreenVideoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <com.warkiz.widget.IndicatorStayLayout
        android:id="@+id/sb_layout"
        android:layout_above="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp">
        <com.warkiz.widget.IndicatorSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isb_max="100"
            app:isb_min="-1.0"
            app:isb_progress="25"
            app:isb_seek_smoothly="true"
            app:isb_ticks_count="5"
            app:isb_show_tick_marks_type="oval"
            app:isb_tick_marks_size="13dp"
            app:isb_show_tick_texts="true"
            app:isb_tick_texts_size="15sp"
            app:isb_tick_texts_color="@color/colorAccent"
            app:isb_thumb_color="@color/colorPrimaryDark"
            app:isb_thumb_size="20dp"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_indicator_color="@color/colorPrimaryDark"
            app:isb_indicator_text_color="@color/colorAccentOri"
            app:isb_tick_marks_color="@color/colorAccentOri"
            app:isb_indicator_text_size="18sp"
            app:isb_track_background_color="#d6d6d6"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_color="@color/colorPrimary"
            app:isb_track_progress_size="4dp" />
    </com.warkiz.widget.IndicatorStayLayout>
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kirim"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorAccentOri"/>
</RelativeLayout>